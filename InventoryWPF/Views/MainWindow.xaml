<Window x:Class="InventoryWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventoryWPF"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="720"
        Width="1280"
        MinHeight="720"
        MinWidth="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Image Grid.Row="0"
                   Source="/Assets/Images/Logo_DC_zonder_text.png"
                   VerticalAlignment="Top"
                   Margin="15 10"
                   Visibility="Visible"/>
            <StackPanel Grid.Row="1">
                <Button FontFamily="{StaticResource SymbolThemeFontFamily}"
                        Content="&#xE700;" FontSize="16" />
                
                <Button HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Margin="5 10 5 0">
                    <StackPanel Orientation="Horizontal" Margin="-5 0 0 0">
                        <TextBlock FontFamily="{StaticResource SymbolThemeFontFamily}"
                                   Text="&#xE80F;"
                                   FontSize="16"
                                   HorizontalAlignment="Left" />
                        <TextBlock Text="{Binding PageName}"
                                   Margin="20 0 0 0" />
                    </StackPanel>
                </Button>
                
                <Button HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Margin="5 10 5 0">
                    <StackPanel Orientation="Horizontal" Margin="-5 0 0 0">
                        <TextBlock FontFamily="{StaticResource SymbolThemeFontFamily}"
                                   Text="&#xF0E4;"
                                   FontSize="16"
                                   HorizontalAlignment="Left" />
                        <TextBlock Text="Job"
                                   Margin="20 0 0 0" />
                    </StackPanel>
                </Button>
                
                <Button HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Margin="5 10 5 0">
                    <StackPanel Orientation="Horizontal" Margin="-5 0 0 0">
                        <TextBlock FontFamily="{StaticResource SymbolThemeFontFamily}"
                                   Text="&#xED0E;"
                                   FontSize="16"
                                   HorizontalAlignment="Left" />
                        <TextBlock Text="Inventory"
                                   Margin="20 0 0 0" />
                    </StackPanel>
                </Button>
                
                <Button HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Margin="5 10 5 0">
                    <StackPanel Orientation="Horizontal" Margin="-5 0 0 0">
                        <TextBlock FontFamily="{StaticResource SymbolThemeFontFamily}"
                                   Text="&#xE779;"
                                   FontSize="16"
                                   HorizontalAlignment="Left" />
                        <TextBlock Text="Customers"
                                   Margin="20 0 0 0" />
                    </StackPanel>
                </Button>
                
                <Button HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Margin="5 10 5 0">
                    <StackPanel Orientation="Horizontal" Margin="-5 0 0 0">
                        <TextBlock FontFamily="{StaticResource SymbolThemeFontFamily}"
                                   Text="&#xE825;"
                                   FontSize="16"
                                   HorizontalAlignment="Left" />
                        <TextBlock Text="Venues"
                                   Margin="20 0 0 0" />
                    </StackPanel>
                </Button>
            </StackPanel>
            <Button Grid.Row="2"
                    FontFamily="{StaticResource SymbolThemeFontFamily}"
                    Content="&#xE713;"
                    Margin="5 0 0 5"/>

        </Grid>
    </Grid>
</Window>
