<UserControl x:Class="InventoryWPF.Views.InventoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:InventoryWPF.Views"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             d:Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
                <TextBlock Grid.Column="0"
                           Grid.Row="0"
                           Text="Inventory" />

                <Grid Grid.Column="0"
                      Grid.Row="1">

                    <DataGrid ItemsSource="{Binding Products}"
                              AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Code"
                                                Width="*"
                                                Binding="{Binding Code}" />
                            <DataGridTextColumn Header="Name"
                                                Width="2*"
                                                Binding="{Binding Name}" />
                            <DataGridTextColumn Header="Stock"
                                                Width="*"
                                                Binding="{Binding Stock}" />
                            <DataGridTextColumn Header="KeepTrack"                                                Width="*"
                                                Binding="{Binding KeepTrackOfStock}" />
                            <DataGridTemplateColumn Header="Buttons"
                                                    Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
    </Grid>
</UserControl>
